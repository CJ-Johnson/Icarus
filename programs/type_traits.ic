Any := (T: type) -> bool {
  return true
}

IsNumeric := (T: type) -> bool {
  return T == real | T == uint | T == int
}

bytes := (T: type) -> uint {
  return case {
    T == bool  =>  1u
    T == char  =>  1u
    T == int   =>  4u
    T == real  =>  8u
    T == uint  =>  8u
    T == type  =>  0u
    T == void  =>  0u
  }
}

IsBig := (T: type) -> bool {
  if bytes(T) > 4u {
    return true
  } else {
    return false
  }
}
