Any := (T: type) -> bool {
  return true
}

alloc := (ptr: &&Any`T) -> void {
  malloc: uint -> &char #cstdlib
  @ptr = malloc(T.bytes) :> &T
}

main := void -> void {
  x : &int
  y : &char = null
 
  print x
  print `n
  alloc(&x)
  print x
  print `n
  @x = 17
  print @x
  print `n
  free x
  print x
  print "\n============================\n"
  print y
  print `n
  alloc(&y)
  print y
  print `n
  @y = ascii(65u)
  print @y
  print `n
  free y
  print y
  print `n
}
