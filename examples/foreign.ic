pair ::= struct {
  x: real
  y: real
}

(print) ::= (p: pair) -> { print "(", p.x, ", ", p.y, ")" }

main ::= () -> () {
  ptr := allocate(pair)
  ptr.x = 3.14160
  ptr.y = 2.71828
  print @ptr, "\n"
  // Leaking!
}

allocate ::= (T :: type) -> *T {
  malloc ::= foreign("malloc", int -> *T)
  // TODO function returning number of bytes in a type
  return malloc(T'bytes)
}
