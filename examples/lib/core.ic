if ::= scope {
  self ::= block {
    before ::= (b: bool) => switch {
      self when b
      exit when !b
    }
    after ::= () => exit
  }
}

forever ::= scope {
  self ::= block {
    before ::= () => self
    after ::= () => self
  }
}

while ::= scope {
  self ::= block {
    before ::= (b: bool) => switch {
      self when b
      exit when !b
    }
    after ::= () => self
  }
}
