if ::= scope {
  init ::= (b: bool) => switch {
    then        when b
    else | exit when !b
  }
  then ::= block {
    before ::= (state: *int) -> {}
    after ::= (state: *int) => exit
  }
  else ::= block? {
    before ::= (state: *int) -> {}
    after ::= (state: *int) => exit
  }
}

while ::= scope {
  init ::= (b: bool) => switch {
    do when b
    exit when !b
  }
  do ::= block {
    before ::= (state: *int) -> {}
    after ::= (state: *int) => start
  }
}
